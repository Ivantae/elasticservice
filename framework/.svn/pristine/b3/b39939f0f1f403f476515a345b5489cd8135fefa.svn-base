package scalacheck.elasticservice.util.ep

import org.scalacheck.Properties
import org.scalacheck.Prop.forAll
import elasticservice.util.ep.Record
import test.elasticservice.util._
import elasticservice.epMkString


object RecordChkTest extends Properties("Record"){
  property("apply") = forAll {
    (s: String, t: AnyVal) => 
      val rec = Record(Map(s->t))
      
      rec(s) == t
  }
  
  property("+=") = forAll {
    (s: String, t: AnyVal, m: Map[String, AnyVal]) =>
      val rec = Record(m)
      rec.+=(s, t)
      rec(s) == t
  }
  
